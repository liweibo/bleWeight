<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.bleweight">

    <application
        android:name="printer.icod.printer.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="printer.icod.printer.SetActivity"></activity>
        <activity
            android:name="printer.icod.printer.LoginActivity"
            android:screenOrientation="fullSensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.icod.printer.ui.MainActivity"
            android:screenOrientation="fullSensor" />
        <activity
            android:name="printer.example.bleweight.MainActivityTwo"
            android:screenOrientation="fullSensor"></activity>
    </application>
    <uses-feature android:name="android.hardware.usb.host" />
    <uses-feature android:name="android.hardware.wifi" />

    <uses-permission android:name="android.permission.INTERNET" /> <!-- WIFIManage permission -->
    <!-- Allows applications to access information about networks -->
    <uses-permission
        android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"
        tools:ignore="ProtectedPermissions" /> <!-- Allows applications to access information about Wi-Fi networks -->
    <uses-permission
        android:name="android.permission.INSTALL_PACKAGES"
        tools:ignore="ProtectedPermissions" /> <!-- Allows applications to change network connectivity state -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> <!-- Allows applications to change network connectivity state -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" /> <!-- Allows applications to enter Wi-Fi Multicast mode -->
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" /> <!-- Internet permission -->
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE" /> <!-- SDCard permission -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET"></uses-permission> <!-- If your application uses Wi-Fi, declare so with a <uses-feature> element in the manifest file -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> <!-- Bluetooth permission -->
    <uses-permission
        android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.BLUETOOTH" />

    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

</manifest>
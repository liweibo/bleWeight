<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_recy_item"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/ripple_bg_pro_recy_item"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_item_bill_arrow"
            android:layout_width="7.4dp"
            android:layout_height="12dp"
            android:layout_weight="0.1"
            android:gravity="center"
            android:src="@drawable/ic_right_arrow"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_item_bill_name"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="12"
            android:textColor="#8a000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_item_bill_danjia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="50"
            android:textColor="#8a000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_item_bill_jianshu"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="12"
            android:textColor="#8a000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_item_bill_zhongliang"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="12.77"
            android:textColor="#8a000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_item_bill_xiaoji"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="888"
            android:textColor="#8a000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_item_bill_xuhao"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="01"
            android:textColor="#8a000000"
            android:textSize="14sp" />
    </LinearLayout>


</LinearLayout>